@page
@model MicrosoftIdentity_Learning.Pages.Shared.Login.LoginModel
@{
}
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group mb-3">
            <label asp-for="Credential.UserName">User Name</label>
            <input type="text" asp-for=Credential.UserName class="form-control" placeholder="Enter user name">
            <span class="text-danger" asp-validation-for="Credential.UserName"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Credential.Password">Password</label>
            <input type="password" asp-for=Credential.Password class="form-control" placeholder="Enter password">
            <span class="text-danger" asp-validation-for="Credential.Password"></span>
        </div>
        <div class="form-group text-center">
            <label asp-for="Credential.RememberMe">Remember Me</label>
            <input type="checkbox" asp-for="Credential.RememberMe"/>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mx-auto d-block">Submit</button>
        </div>
    </form>
</div>
